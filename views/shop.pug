extends layouts/main-layout.pug

block styles  
  <link rel="stylesheet" href="/css/product.css">

block content
  main
    if prods.length > 0
        .grid
          each product in prods
            article.card 
              header.card__header
                h1.product__title #{product.title}
              div.card__image
                img(src="https://proxy.duckduckgo.com/iu/?u=https%3A%2F%2Fthefutureorganization.com%2Fwp-content%2Fuploads%2F2014%2F03%2Fbook-image-crop.jpg&f=1", alt="A Book")
              div.card__content
                h2.product__price $19.99
                p.product__description A very interesting book about so many even more interesting things!
              .card__actions
                button.btn Add to Cart      
    else 
      h1 No Products
      

